    "targetType": "none",

    "dependencies": {
        "dareal2:legacy": "*",
        "dareal2:platformer": "*",
        "dareal2:util": "*"
    },

    "subPackages": [
        {
            "name": "legacy",
            "sourcePaths": [ "source/legacy/dareal/legacy" ],
            "importPaths": [ "source/legacy" ],
            "targetPath": "bin",

            "buildRequirements": [
                "allowWarnings"
            ],

            "dependencies": {
                "arsd-official:nanovega": "~>2.1.0",
                "eventsystem": "~>1.2.0"
            }
        },
        {
            "name": "platformer",
            "sourcePaths": [ "source/platformer/dareal/platformer" ],
            "importPaths": [ "source/platformer" ],
            "targetPath": "bin"
        },
        {
            "name": "util",
            "sourcePaths": [ "source/util/dareal/util" ],
            "importPaths": [ "source/util" ],
            "targetPath": "bin"
        }
    ]
}
